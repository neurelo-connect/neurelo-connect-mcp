{
  "cSpell.ignorePaths": [
    ".git/{index,*refs,*HEAD}",
    ".git/{info,lfs,logs,refs,objects}/**",
    ".vscode",
    ".vscode-insiders",
    "node_modules",
    "package-lock.json",
    "pnpm-lock.yaml",
    "vscode-extension"
  ],
  "cSpell.words": [
    "addgroup",
    "adduser",
    "neurelo",
    "clickhouse",
    "codegen",
    "zod",
    "modelcontextprotocol"
  ],
  "editor.formatOnSave": true,
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "search.exclude": {
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/out": true
  }
}
